        //local storage->stores data permanently
        //(until cleared by user or code)
        //values will be in strings only ("") so dictinoary method
        localStorage.getItem("username","javascript");
        localStorage.getItem("username");
        localStorage.removeItem("username");
        localStorage.clear()
        //storing array value in localstorage
        //local storage only stores string ,not arrays
        //we need to convert arrays into a string(using JSON.stringify)
       var a=["hachu",19,"bsc ct"];
       var b=["swetha",18,"bsc ct"];
       //json class
       //stringify converting to string(method)
       localStorage.setItem("details",JSON.stringify(a))
       localStorage.setItem("details",JSON.stringify(b))
       // parse()to get the stringfy elements
       let stredarr=JSON.parse(localStorage.getItem("details"))
       console.log(stredarr)
       //storing an array of objects in local storage
       let subject=[{
